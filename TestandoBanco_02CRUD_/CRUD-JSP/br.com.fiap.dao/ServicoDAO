package br.com.fiap.dao;

import java.util.ArrayList;
import java.util.List;
import br.com.fiap.bean.Servico;

public class ServicoDAO {
private static List<Servico> lista = new ArrayList<Servico>();

	static{
		lista.add(new Servico(1,"Troca de Óleo",130));
		lista.add(new Servico(2,"Alinhamento",80));
		lista.add(new Servico(3,"Balanceamento",60));
		lista.add(new Servico(4,"Freio",200));
		lista.add(new Servico(5,"Câmbio",350));
		lista.add(new Servico(6,"Escapamento",205));
	}

	public List<Servico> buscarTodos(){
		return lista;
	}
}
